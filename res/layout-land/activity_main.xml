<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:rowCount="6"
    android:columnCount="3"
    android:orientation="vertical"
    android:layout_marginRight="100sp"
    android:layout_marginLeft="100sp"
    android:layout_marginTop="15sp"

    tools:context="com.example.android.tipcalculator.MainActivity">

    <EditText
        android:id="@+id/based_amount"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:layout_margin="10px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_row="0"
        android:background="@color/colorLightBlue"
        android:digits="0123456789."
        android:hint="@string/enter_amount"
        android:inputType="numberDecimal"
        android:padding="5dp"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/tip_percent"
        android:layout_row="1"
        android:layout_column="0"
        tools:text="15%"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:textSize="20dp"/>

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_margin="10dp"
        android:paddingRight="15pt"
        android:min="0"
        android:max="25"
        android:progressDrawable="@drawable/custom_progress"
        android:thumb="@drawable/thumb_drawable"/>


    <TextView
        android:layout_column="0"
        android:layout_margin="10px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_row="2"
        android:padding="5dp"
        android:text="@string/tip"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/tip_amount"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="10px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_row="2"
        android:enabled="false"
        android:inputType="numberDecimal"
        android:padding="5dp"
        android:textColor="@color/colorBlack"
        android:textSize="25sp" />


    <TextView
        android:layout_column="0"
        android:layout_margin="10px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_row="3"
        android:padding="5dp"
        android:text="@string/total"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/total_amount"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="10px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_row="3"
        android:enabled="false"
        android:inputType="numberDecimal"
        android:padding="5dp"
        android:textColor="@color/colorBlack"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/api_index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="API"
        android:textAlignment="center"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="3"/>
    <TextView
        android:id="@+id/copyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\@Created by Olga Gavrylchenko, 02/26/2018"
        android:textAlignment="center"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="3"/>


</GridLayout>
